<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Video Article</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"> 

</head>
<body class="bg-light p-4">

<div class="container">
    <h2 class="mb-4 text-primary fw-light">
        <i class="bi bi-camera-video-fill me-2"></i> Upload Video + Article
    </h2>

    <div class="card shadow-lg">
        <div class="card-body p-4">

            <form action="/api/video/publish" method="POST">

                <!-- Headline -->
                <div class="mb-3">
                    <label class="fw-bold">Headline <span class="text-danger">*</span></label>
                    <input type="text" name="headline" class="form-control form-control-lg" required>
                </div>

                <!-- YouTube Video URL -->
                <div class="mb-3">
                    <label class="fw-bold">YouTube Video URL <span class="text-danger">*</span></label>
                    <input type="text" name="videoUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=xxxxx" required>
                    <small class="text-muted">Paste the full YouTube video link.</small>
                </div>

                <!-- Article Text -->
                <div class="mb-3">
                    <label class="fw-bold">Article Description</label>
                    <textarea name="article" rows="8" class="form-control" placeholder="Write the article or description..."></textarea>
                </div>

                <!-- Tags -->
                <div class="mb-3">
                    <label class="fw-bold">Tags (comma separated)</label>
                    <input type="text" name="tags" class="form-control" placeholder="news, trending, economy">
                </div>

                <!-- Publish Toggle -->
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" name="status" value="published" checked>
                    <label class="form-check-label fw-bold">Publish Immediately</label>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="reset" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-eraser"></i> Clear
                    </button>

                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-cloud-upload-fill me-1"></i> Publish Video Post
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

</body>
</html>
