<!DOCTYPE html>
<html>
<head>
  <title>Manage Headlines</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container mt-5">
  <h2 class="mb-4 text-primary">ğŸ“° All Headlines</h2>

  <% if (!headlines || headlines.length === 0) { %>
    <div class="alert alert-warning">No headlines found.</div>
  <% } else { %>

  <table class="table table-bordered table-hover bg-white shadow">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Headline</th>
        <th>Status</th>
        <th>Created</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% headlines.forEach((h, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= h.title %></td>
          <td>
            <span class="badge <%= h.status === 'published' ? 'bg-success' : 'bg-secondary' %>">
              <%= h.status %>
            </span>
          </td>
          <td><%= h.createdAt.toDateString() %></td>
          <td>
            <a href="/admin/headlines/delete/<%= h._id %>"
               class="btn btn-danger btn-sm"
               onclick="return confirm('Delete this headline?')">
              ğŸ—‘ Delete
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% } %>
</div>

</body>
</html>
