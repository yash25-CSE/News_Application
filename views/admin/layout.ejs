<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet"  href="style.css">
  <script defer src="admin.js"></script>
</head>

<style>
    body {
  margin: 0;
  font-family: Arial, sans-serif;
}

.admin-container {
  display: flex;
  height: 100vh;
}

.sidebar {
  width: 250px;
  background-color: #2c3e50;
  color: #fff;
  padding: 20px;
}

.sidebar h2 {
  margin-top: 0;
}

.sidebar button {
  display: block;
  width: 100%;
  padding: 10px;
  margin-top: 10px;
  background-color: #34495e;
  border: none;
  color: white;
  font-size: 16px;
  cursor: pointer;
  border-radius: 4px;
}

.sidebar button:hover {
  background-color: #3c6382;
}

.content {
  flex: 1;
  background-color: #ecf0f1;
  padding: 0;
}

iframe {
  width: 100%;
  height: 100%;
  border: none;
}

</style>
<body>
  <div class="admin-container">
    <div class="sidebar">
      <h2>Admin Panel</h2>
      <button onclick="loadPage('/admin/write_article')">Write Article</button>

      <button onclick="loadPage('/admin/upload_video')">Uplode Videos</button>

      <button onclick="loadPage('/admin/current_affairs')">current_affairs</button>

      <button onclick="loadPage('/admin/upload_photos')">Upload Photos</button>

      <button onclick="loadPage('/admin/upload_headline')">Manage Headlines</button>

      <button onclick="goToLogout()">Logout</button>

      <!-- Add more buttons here -->
    </div>

    <div class="content">
      <iframe id="adminFrame" src="/admin/write_article"></iframe>
    </div>

<script>
  function loadPage(route) {
    document.getElementById("adminFrame").src = route;
  }

  function goToLogout() {
    window.location.href = "/admin/login";
  }
</script>




  </div>
</body>
</html>
