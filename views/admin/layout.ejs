  <script>
    // Page loading function
    function loadPage(route) {
      const iframe = document.getElementById('adminFrame');
      const statsContainer = document.getElementById('statsContainer');
      const menuItems = document.querySelectorAll('.menu-item');
      const upbarItems = document.querySelectorAll('.upbar-item');
      
      // Update active menu item in sidebar
      menuItems.forEach(item => {
        item.classList.remove('active');
      });
      
      // Update active upbar item
      upbarItems.forEach(item => {
        item.classList.remove('active');
      });
      
      // Find and activate the clicked menu item in sidebar
      const sidebarClickedItem = Array.from(menuItems).find(item => 
        item.getAttribute('onclick')?.includes(route)
      );
      
      if (sidebarClickedItem) {
        sidebarClickedItem.classList.add('active');
      }
      
      // Find and activate the clicked upbar item
      const upbarClickedItem = Array.from(upbarItems).find(item => 
        item.getAttribute('onclick')?.includes(route)
      );
      
      if (upbarClickedItem) {
        upbarClickedItem.classList.add('active');
      }
      
      // Update page title based on route
      const titleMap = {
        '/admin/write_article': 'Write Article',
        '/admin/upload_video': 'Upload Videos',
        '/admin/current_affairs': 'Current Affairs',
        '/admin/upload_photos': 'Upload Photos',
        '/admin/upload_headline': 'Manage Headlines',
        '/admin/current_affairs_list': 'Current Affairs List',
        '/admin/user_roles': 'User Roles',
        '/admin/activity_logs': 'Activity Logs',
        '/admin/app_settings': 'App Settings',
        '/admin/analytics': 'Analytics',
        '/admin/backup': 'Backup & Restore',
        '/admin/dashboard': 'Dashboard Overview'
      };
      
      // Show/hide stats container
      if (route === '/admin/dashboard') {
        statsContainer.style.display = 'grid';
      } else {
        statsContainer.style.display = 'none';
      }
      
      // Add loading animation
      iframe.classList.add('loading');
      
      // Set iframe source
      iframe.src = route;
      
      // Remove loading class when iframe loads
      iframe.onload = function() {
        iframe.classList.remove('loading');
        
        // Close sidebar on mobile after selection
        if (window.innerWidth <= 1200) {
          document.getElementById('sidebar').classList.remove('active');
        }
      };
    }
    
    // Logout function
    function goToLogout() {
      if (confirm('Are you sure you want to logout?')) {
        window.location.href = "/admin/login";
      }
    }
    
    // Mobile menu toggle
    document.getElementById('menuToggle').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('active');
    });
    
    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
      const sidebar = document.getElementById('sidebar');
      const menuToggle = document.getElementById('menuToggle');
      
      if (window.innerWidth <= 1200 && 
          sidebar.classList.contains('active') && 
          !sidebar.contains(event.target) && 
          !menuToggle.contains(event.target)) {
        sidebar.classList.remove('active');
      }
    });
    
    // Handle iframe errors
    document.getElementById('adminFrame').onerror = function() {
      this.classList.remove('loading');
      this.contentDocument.body.innerHTML = `
        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; padding: 2rem; text-align: center;">
          <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: #dc2626; margin-bottom: 1rem;"></i>
          <h2 style="color: #1e293b; margin-bottom: 0.5rem;">Unable to load content</h2>
          <p style="color: #64748b; margin-bottom: 1.5rem;">The requested page could not be loaded. Please check your connection and try again.</p>
          <button onclick="window.location.reload()" style="background: #3b82f6; color: white; border: none; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-weight: 500;">
            <i class="fas fa-redo-alt"></i> Retry
          </button>
        </div>
      `;
    };
    
    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
      // Ctrl + L for logout
      if (e.ctrlKey && e.key === 'l') {
        goToLogout();
      }
      
      // Escape to close sidebar on mobile
      if (e.key === 'Escape' && window.innerWidth <= 1200) {
        document.getElementById('sidebar').classList.remove('active');
      }
    });
    
    // Initialize active menu item based on current iframe src
    window.addEventListener('load', function() {
      const iframeSrc = document.getElementById('adminFrame').src;
      const path = iframeSrc.substring(iframeSrc.lastIndexOf('/admin'));
      loadPage(path);
    });
  </script>
