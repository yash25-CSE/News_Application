<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Samachar App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-color: #1e40af;
      --secondary-color: #dc2626;
      --accent-color: #2563eb;
      --sidebar-bg: #1e293b;
      --sidebar-hover: #334155;
      --sidebar-active: #3b82f6;
      --light-bg: #f8fafc;
      --card-bg: #ffffff;
      --text-dark: #1e293b;
      --text-light: #64748b;
      --border-color: #e2e8f0;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.05);
      --shadow-md: 0 6px 20px rgba(0, 0, 0, 0.08);
      --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.12);
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', 'Segoe UI', sans-serif;
      background-color: var(--light-bg);
      color: var(--text-dark);
      overflow-x: hidden;
      height: 100vh;
    }

    /* UPBAR STYLES - Horizontal navigation */
    .upbar {
      position: fixed;
      top: 0;
      left: 280px; /* Same as sidebar width */
      right: 0;
      height: 70px;
      background: linear-gradient(90deg, #1e293b 0%, #0f172a 100%);
      color: white;
      display: flex;
      align-items: center;
      padding: 0 1.5rem;
      z-index: 999;
      box-shadow: var(--shadow-md);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .upbar-menu {
      display: flex;
      align-items: center;
      gap: 5px;
      overflow-x: auto;
      scrollbar-width: thin;
      scrollbar-color: rgba(255, 255, 255, 0.2) transparent;
      padding: 0.5rem 0;
    }

    .upbar-menu::-webkit-scrollbar {
      height: 4px;
    }

    .upbar-menu::-webkit-scrollbar-track {
      background: transparent;
    }

    .upbar-menu::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 10px;
    }

    .upbar-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 0.6rem 1rem;
      color: #cbd5e1;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border-radius: var(--radius-sm);
      border-bottom: 3px solid transparent;
      white-space: nowrap;
      min-height: 42px;
    }

    .upbar-item:hover {
      background: var(--sidebar-hover);
      color: white;
      border-bottom-color: var(--accent-color);
    }

    .upbar-item.active {
      background: rgba(59, 130, 246, 0.15);
      color: white;
      border-bottom-color: var(--accent-color);
    }

    .upbar-icon {
      font-size: 1rem;
      width: 20px;
      text-align: center;
    }

    .upbar-text {
      font-size: 0.85rem;
      font-weight: 500;
    }

    .upbar-badge {
      background: var(--secondary-color);
      color: white;
      padding: 0.15rem 0.4rem;
      border-radius: 10px;
      font-size: 0.65rem;
      font-weight: 600;
      margin-left: 5px;
    }

    .upbar-right {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-left: auto;
      padding-left: 1rem;
      border-left: 1px solid rgba(255, 255, 255, 0.1);
    }

    .upbar-notification {
      position: relative;
      color: #cbd5e1;
      cursor: pointer;
      padding: 0.5rem;
      border-radius: var(--radius-sm);
      transition: all 0.2s ease;
    }

    .upbar-notification:hover {
      background: var(--sidebar-hover);
      color: white;
    }

    .notification-badge {
      position: absolute;
      top: 0;
      right: 0;
      background: var(--secondary-color);
      color: white;
      font-size: 0.6rem;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .upbar-quick-actions {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .quick-action-btn {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      color: #cbd5e1;
      padding: 0.5rem 0.8rem;
      border-radius: var(--radius-sm);
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      gap: 5px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .quick-action-btn:hover {
      background: var(--sidebar-hover);
      color: white;
    }

    /* Dashboard Layout */
    .dashboard-container {
      display: flex;
      height: 100vh;
      width: 100%;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 280px;
      background: linear-gradient(180deg, var(--sidebar-bg) 0%, #0f172a 100%);
      color: white;
      display: flex;
      flex-direction: column;
      transition: all 0.3s ease;
      z-index: 1000;
      box-shadow: var(--shadow-lg);
      position: relative;
      overflow-y: auto;
    }

    .sidebar-header {
      padding: 1.8rem 1.5rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      text-align: center;
    }

    .logo-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      margin-bottom: 0.8rem;
    }

    .logo-icon {
      width: 42px;
      height: 42px;
      background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      color: white;
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .logo-text {
      font-size: 1.4rem;
      font-weight: 700;
      color: white;
    }

    .admin-info {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 0.8rem 0;
      border-radius: var(--radius-md);
      background: rgba(255, 255, 255, 0.05);
      margin-top: 0.5rem;
    }

    .admin-avatar {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, #f59e0b, #d97706);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      color: white;
    }

    .admin-details h4 {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0;
    }

    .admin-details p {
      font-size: 0.8rem;
      color: #cbd5e1;
      margin-bottom: 0;
    }

    /* Sidebar Menu */
    .sidebar-menu {
      flex: 1;
      padding: 1.5rem 0;
      overflow-y: auto;
    }

    .menu-section {
      margin-bottom: 1.5rem;
    }

    .menu-title {
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: #94a3b8;
      padding: 0 1.5rem;
      margin-bottom: 0.8rem;
      font-weight: 600;
    }

    .menu-items {
      list-style: none;
      padding: 0;
    }

    .menu-item {
      padding: 0.8rem 1.5rem;
      display: flex;
      align-items: center;
      gap: 12px;
      color: #cbd5e1;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border-left: 3px solid transparent;
      margin-bottom: 0.2rem;
    }

    .menu-item:hover {
      background: var(--sidebar-hover);
      color: white;
      border-left-color: var(--accent-color);
    }

    .menu-item.active {
      background: rgba(59, 130, 246, 0.15);
      color: white;
      border-left-color: var(--accent-color);
    }

    .menu-icon {
      font-size: 1.2rem;
      width: 24px;
      text-align: center;
    }

    .menu-text {
      font-size: 0.95rem;
      font-weight: 500;
      flex: 1;
    }

    .badge {
      background: var(--secondary-color);
      color: white;
      padding: 0.2rem 0.6rem;
      border-radius: 20px;
      font-size: 0.7rem;
      font-weight: 600;
    }

    /* Logout Button */
    .logout-btn {
      margin: 1.5rem;
      padding: 0.9rem;
      background: rgba(220, 38, 38, 0.1);
      border: 1px solid rgba(220, 38, 38, 0.3);
      color: #fca5a5;
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .logout-btn:hover {
      background: rgba(220, 38, 38, 0.2);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
    }

    /* Main Content Area - Adjusted for upbar */
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      margin-top: 70px; /* Height of upbar */
    }

    /* Content Area */
    .content-area {
      flex: 1;
      padding: 1.5rem;
      overflow: hidden;
      background: var(--light-bg);
    }

    .iframe-container {
      width: 100%;
      height: 100%;
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-md);
      background: white;
      border: 1px solid var(--border-color);
    }

    #adminFrame {
      width: 100%;
      height: 100%;
      border: none;
      background: white;
    }

    /* Dashboard Stats Cards */
    .stats-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .stat-card {
      background: white;
      border-radius: var(--radius-md);
      padding: 1.5rem;
      box-shadow: var(--shadow-sm);
      border-left: 4px solid var(--accent-color);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-md);
    }

    .stat-card.warning {
      border-left-color: #f59e0b;
    }

    .stat-card.danger {
      border-left-color: var(--secondary-color);
    }

    .stat-card.success {
      border-left-color: #10b981;
    }

    .stat-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1rem;
    }

    .stat-title {
      font-size: 0.95rem;
      color: var(--text-light);
      font-weight: 500;
    }

    .stat-icon {
      font-size: 1.5rem;
      color: var(--accent-color);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 0.5rem;
    }

    .stat-change {
      font-size: 0.85rem;
      color: #10b981;
      font-weight: 500;
    }

    .stat-change.negative {
      color: var(--secondary-color);
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .upbar {
        left: 0;
      }
      
      .sidebar {
        position: fixed;
        left: -280px;
        height: 100vh;
        z-index: 1001;
      }
      
      .sidebar.active {
        left: 0;
      }
      
      .menu-toggle {
        display: block;
      }
      
      .main-content {
        width: 100%;
      }
      
      .stats-container {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 992px) {
      .upbar-text {
        display: none;
      }
      
      .upbar-item {
        padding: 0.6rem;
      }
      
      .upbar-icon {
        font-size: 1.2rem;
      }
      
      .quick-action-btn span {
        display: none;
      }
      
      .quick-action-btn {
        padding: 0.5rem;
      }
    }

    @media (max-width: 768px) {
      .upbar {
        padding: 0 1rem;
        height: 60px;
      }
      
      .main-content {
        margin-top: 60px;
      }
      
      .content-area {
        padding: 1rem;
      }
      
      .stats-container {
        grid-template-columns: 1fr;
      }
      
      .upbar-right {
        gap: 0.5rem;
      }
    }

    @media (max-width: 576px) {
      .sidebar {
        width: 260px;
      }
      
      .stat-card {
        padding: 1.2rem;
      }
      
      .stat-value {
        font-size: 1.8rem;
      }
      
      .upbar-menu {
        gap: 2px;
      }
      
      .upbar-item {
        padding: 0.5rem;
      }
    }

    /* Animation for sidebar */
    .sidebar {
      animation: slideInLeft 0.3s ease;
    }

    @keyframes slideInLeft {
      from {
        transform: translateX(-20px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    /* Custom scrollbar */
    .sidebar-menu::-webkit-scrollbar {
      width: 5px;
    }

    .sidebar-menu::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
    }

    .sidebar-menu::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 10px;
    }

    /* Loading state for iframe */
    .loading {
      position: relative;
    }

    .loading::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 40px;
      height: 40px;
      border: 3px solid var(--border-color);
      border-top-color: var(--accent-color);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      transform: translate(-50%, -50%);
    }

    @keyframes spin {
      0% { transform: translate(-50%, -50%) rotate(0deg); }
      100% { transform: translate(-50%, -50%) rotate(360deg); }
    }
  </style>
</head>
