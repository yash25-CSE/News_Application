<!DOCTYPE html>
<html>
<head>
    <title><%= affair.headline %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container mt-4">

    <h1 class="fw-bold"><%= affair.headline %></h1>

    <!-- IMAGE -->
    <% if (affair.imageUrl) { %>
        <img src="<%= affair.imageUrl %>" class="img-fluid mb-4 rounded">
    <% } %>

    <!-- VIDEO -->
    <% if (affair.videoUrl) { %>
    <div class="ratio ratio-16x9 mb-4">
        <iframe src="<%= affair.videoUrl.replace('watch?v=', 'embed/') %>" allowfullscreen></iframe>
    </div>
    <% } %>

    <p class="fs-5"><%= affair.article %></p>

    <hr>

    <!-- LIKE BUTTON -->
    <form action="/current-affairs/<%= affair._id %>/like" method="POST">
        <button class="btn btn-outline-primary">
            üëç Like (<%= affair.likes %>)
        </button>
    </form>

    <hr>

    <!-- COMMENTS -->
    <h4>Comments</h4>
    <% affair.comments.forEach(c => { %>
        <div class="p-3 bg-white rounded mb-2 shadow-sm">
            <strong><%= c.username %></strong>
            <p><%= c.comment %></p>
        </div>
    <% }) %>

    <form action="/current-affairs/<%= affair._id %>/comment" method="POST">
        <input class="form-control my-2" name="username" placeholder="Your name" required>
        <textarea class="form-control mb-2" name="comment" placeholder="Write a comment..." required></textarea>
        <button class="btn btn-success">Post Comment</button>
    </form>

</div>

</body>
</html>
