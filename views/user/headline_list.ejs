            <a class="navbar-brand" href="/">
                <i class="bi bi-newspaper"></i> NewsHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/Latest">
                            <i class="bi bi-card-text me-1"></i> Latest News
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/current-affairs">
                            <i class="bi bi-clock-history me-1"></i> Current Affairs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom active" href="/headlines">
                            <i class="bi bi-megaphone me-1"></i> Headlines
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/photose">
                            <i class="bi bi-file-text me-1"></i> Articles
                        </a>
                    </li>
                </ul>
                
                <div class="d-flex ms-lg-3 mt-3 mt-lg-0">
                    <a href="#" class="btn btn-outline-light">
                        <i class="bi bi-person-circle me-1"></i> Account
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="text-center">
                <h1 class="hero-title">Latest Headlines</h1>
                <p class="hero-subtitle">
                    Breaking news and top stories from around the world. Stay informed with our comprehensive coverage of the most important headlines.
                </p>
            </div>
        </div>
    </section>

    <div class="container">
        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="row text-center">
                <div class="col-md-3 col-6 stat-item">
                    <span class="stat-number"><%= headlines.length || 0 %></span>
                    <span class="stat-label">Total Headlines</span>
                </div>
                <div class="col-md-3 col-6 stat-item">
                    <span class="stat-number">24</span>
                    <span class="stat-label">Updated Today</span>
                </div>
                <div class="col-md-3 col-6 stat-item">
                    <span class="stat-number">12</span>
                    <span class="stat-label">Breaking News</span>
                </div>
                <div class="col-md-3 col-6 stat-item">
                    <span class="stat-number">8</span>
                    <span class="stat-label">Categories</span>
                </div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-3">Filter by Category:</h5>
                    <div class="filter-tabs">
                        <span class="filter-tab active">All Headlines</span>
                        <span class="filter-tab">Breaking News</span>
                        <span class="filter-tab">Politics</span>
                        <span class="filter-tab">Business</span>
                        <span class="filter-tab">Technology</span>
                        <span class="filter-tab">Sports</span>
                        <span class="filter-tab">Entertainment</span>
                        <span class="filter-tab">Health</span>
                    </div>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <select class="form-select" style="max-width: 200px;">
                        <option>Sort by: Latest</option>
                        <option>Sort by: Most Popular</option>
                        <option>Sort by: Trending</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Headlines Grid -->
        <div class="headlines-grid">
            <% if (headlines && headlines.length > 0) { %>
                <% headlines.forEach((h, index) => { %>
                <div class="headline-card">
                    <% if (index < 3) { %>
                        <div class="card-badge">Breaking</div>
                    <% } %>
                    
                    <div class="card-image">
                        <% if (h.imageUrl) { %>
                            <img src="<%= h.imageUrl %>" ">
                        <% } else { %>
                            <img src="https://images.unsplash.com/photo-1588681664899-f142ff2dc9b1?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Headline">
                        <% } %>
                        <div class="card-category">Headlines</div>
                    </div>
                    
                    <div class="card-content">
                        <h3 class="card-title"><%= h.title %></h3>
                        <p class="card-excerpt">
                            <%= h.summary && h.summary.length > 120 ? h.summary.substring(0, 120) + '...' : h.summary || 'No summary available.' %>
                        </p>
                        
                        <div class="card-meta">
                            <div class="meta-info">
                                <span class="meta-item">
                                    <i class="bi bi-clock"></i>
                                    <%= h.createdAt ? h.createdAt.toDateString() : new Date().toDateString() %>
                                </span>
                                <span class="meta-item">
                                    <i class="bi bi-eye"></i> 1.2k
                                </span>
                            </div>
                            <a href="#" class="read-more-btn">
                                <i class="bi bi-arrow-right"></i> Read
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <i class="bi bi-megaphone display-1 text-muted mb-3"></i>
                    <h3 class="h4 text-muted">No Headlines Available</h3>
                    <p class="text-muted">Check back later for the latest headlines.</p>
                </div>
            <% } %>
        </div>

        <!-- Pagination -->
        <div class="pagination-custom">
            <a href="#" class="page-link-custom">
                <i class="bi bi-chevron-left"></i>
            </a>
            <a href="#" class="page-link-custom active">1</a>
            <a href="#" class="page-link-custom">2</a>
            <a href="#" class="page-link-custom">3</a>
            <a href="#" class="page-link-custom">4</a>
            <a href="#" class="page-link-custom">5</a>
            <a href="#" class="page-link-custom">
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>

        <!-- Trending Headlines -->
        <div class="trending-section">
            <div class="container">
                <h2 class="section-title">Trending Headlines</h2>
                
                <div class="row">
                    <div class="col-md-8">
                        <ul class="trending-list">
                            <li class="trending-item">
                                <div class="trending-rank">1</div>
                                <div class="trending-content">
                                    <a href="#" class="trending-title">Global Markets React to New Economic Policy Announcement</a>
                                    <div class="trending-meta">
                                        <span><i class="bi bi-clock"></i> 2h ago</span>
                                        <span><i class="bi bi-eye"></i> 15.2k views</span>
                                        <span class="badge bg-danger">Breaking</span>
                                    </div>
                                </div>
                            </li>
                            <li class="trending-item">
                                <div class="trending-rank">2</div>
                                <div class="trending-content">
                                    <a href="#" class="trending-title">Major Technology Breakthrough Announced at International Conference</a>
                                    <div class="trending-meta">
                                        <span><i class="bi bi-clock"></i> 5h ago</span>
                                        <span><i class="bi bi-eye"></i> 12.8k views</span>
                                        <span class="badge bg-primary">Tech</span>
                                    </div>
                                </div>
                            </li>
                            <li class="trending-item">
                                <div class="trending-rank">3</div>
                                <div class="trending-content">
                                    <a href="#" class="trending-title">Environmental Summit Concludes with New Climate Agreement</a>
                                    <div class="trending-meta">
