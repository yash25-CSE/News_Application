<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Video News | Latest Updates</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body { background: #f4f4f4; }
        .video-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }
        iframe {
            width: 100%;
            height: 320px;
            border-radius: 10px;
        }
        .headline {
            font-size: 1.3rem;
            font-weight: bold;
        }
        .read-more-btn {
            padding: 8px 16px;
            font-size: 14px;
        }
    </style>

</head>
<body>

<div class="container py-4">

    <h2 class="mb-4 fw-bold">ðŸ“º Latest Video News</h2>

    <% videos.forEach(video => { %>
        <div class="video-card">
            
            <div class="headline"><%= video.headline %></div>

            <div class="mt-3">
                <iframe 
                    src="<%= video.videoUrl.replace('watch?v=', 'embed/') %>" 
                    allowfullscreen>
                </iframe>
            </div>

            <p class="mt-3 text-muted"><%= video.article.substring(0, 150) %>...</p>

            <a href="/video/<%= video._id %>" class="btn btn-primary read-more-btn">
                Read More / Watch Full
            </a>

        </div>
    <% }) %>

</div>

</body>
</html>
