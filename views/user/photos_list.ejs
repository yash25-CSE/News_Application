                        <span class="stat-number">12</span>
                        <span class="stat-label">Categories</span>
                    </div>
                    <div class="col-md-3 col-6 stat-item">
                        <span class="stat-number">48</span>
                        <span class="stat-label">Contributors</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-tags">
                <span class="filter-tag active">All Articles</span>
                <span class="filter-tag">Politics</span>
                <span class="filter-tag">Health</span>
                <span class="filter-tag">Entertainment</span>
                <span class="filter-tag">Sports</span>

            </div>
        </div>

        <!-- Gallery Controls -->
        <div class="gallery-controls">
            <div class="search-box" style="max-width: 400px;">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Search photos...">
                    <button class="btn btn-primary">Search</button>
                </div>
            </div>
            
            <div class="view-options">
                <button class="view-btn active" title="Grid View">
                    <i class="bi bi-grid-3x3-gap"></i>
                </button>
                <button class="view-btn" title="Masonry View">
                    <i class="bi bi-grid-3x3"></i>
                </button>
                <button class="view-btn" title="List View">
                    <i class="bi bi-list"></i>
                </button>
            </div>
        </div>

        <!-- Featured Slider 
        <div class="featured-section">
            <div class="featured-slider">
                <div class="featured-slide">
                    <div class="slide-content">
                        <h2 class="slide-title">Featured Collection</h2>
                        <p class="slide-subtitle">
                            Explore our hand-picked selection of the most stunning and inspiring photographs from around the world.
                        </p>
                        <a href="#" class="btn btn-light btn-lg">
                            <i class="bi bi-star me-2"></i> View Collection
                        </a>
                    </div>
                </div>
            </div>
        </div>
    -->

        <!-- Gallery Grid -->
        <div class="gallery-grid" id="galleryGrid">
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach((post, index) => { %>
                <div class="gallery-item">
                    <div class="image-container">
                        <% if (post.imageFile) { %>
                            <img src="<%= post.imageFile %>" alt="<%= post.title || 'Photo' %>">
                        <% } else if (post.imageUrl) { %>
                            <img src="<%= post.imageUrl %>" alt="<%= post.title || 'Photo' %>">
                        <% } else { %>
                            <img src="https://images.unsplash.com/photo-1579546929662-711aa81148cf?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Default photo">
                        <% } %>
                        
                        <div class="image-overlay">
                            <div>
                                <h3 class="photo-title"><%= post.title || 'Untitled Photo' %></h3>
                                <div class="photo-meta">
                                    <span><i class="bi bi-calendar"></i> Today</span>
                                    <span><i class="bi bi-heart"></i> 245</span>
                                    <span><i class="bi bi-eye"></i> 1.2k</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="photo-content">
                        <div class="photo-header">
                            <span class="photo-category">Photography</span>
                            <span class="photo-date">
                                <i class="bi bi-clock"></i>
                                <%= post.createdAt ? new Date(post.createdAt).toLocaleDateString('en-US', { 
                                    month: 'short', 
                                    day: 'numeric' 
                                }) : 'Recently' %>
                            </span>
                        </div>
                        
                        <p class="photo-description">
                            <%= post.description || 'A beautiful photograph capturing a special moment.' %>
                        </p>
                        
                        <div class="photo-actions">
                            <div class="photo-stats">
                                <span class="stat">
                                    <i class="bi bi-heart"></i>
                                    <span>245</span>
                                </span>
                                <span class="stat">
                                    <i class="bi bi-chat"></i>
                                    <span>42</span>
                                </span>
                                <span class="stat">
                                    <i class="bi bi-share"></i>
                                    <span>18</span>
                                </span>
                            </div>
                            
                            <a href="/photo/<%= post._id %>" class="view-details-btn">
                                <i class="bi bi-eye"></i>
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <i class="bi bi-images"></i>
                    <h3>No Photos Available</h3>
                    <p>Be the first to upload stunning photos to our gallery!</p>
                    <a href="/new" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i> Upload Your First Photo
                    </a>
                </div>
            <% } %>
        </div>




        <!-- Pagination -->
        <div class="pagination-custom">
            <a href="#" class="page-link-custom">
                <i class="bi bi-chevron-left"></i>
            </a>
            <a href="#" class="page-link-custom active">1</a>
            <a href="#" class="page-link-custom">2</a>
            <a href="#" class="page-link-custom">3</a>
            <a href="#" class="page-link-custom">4</a>
            <a href="#" class="page-link-custom">5</a>
            <a href="#" class="page-link-custom">
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    </div>

    <!-- Footer -->
    <%- include('footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Filter functionality
        document.querySelectorAll('.filter-tag').forEach(tag => {
            tag.addEventListener('click', function() {
                document.querySelectorAll('.filter-tag').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // In real implementation, filter photos based on category
                console.log('Filtering photos by:', this.textContent);
            });
        });
        
        // View options functionality
        document.querySelectorAll('.view-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const galleryGrid = document.getElementById('galleryGrid');
                const viewType = this.querySelector('i').className;
                
                if (viewType.includes('grid-3x3')) {
                    galleryGrid.classList.remove('masonry');
                    galleryGrid.style.display = 'grid';
                } else if (viewType.includes('grid-3x3-gap')) {
                    galleryGrid.classList.add('masonry');
                    galleryGrid.style.display = 'block';
                } else if (viewType.includes('list')) {
                    galleryGrid.classList.remove('masonry');
                    galleryGrid.style.display = 'flex';
                    galleryGrid.style.flexDirection = 'column';
                }
            });
        });
        
        // Photo card hover effects
        const photoCards = document.querySelectorAll('.gallery-item');
        photoCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
            
            // Click to view details
            card.addEventListener('click', function(e) {
                if (!e.target.closest('.view-details-btn') && !e.target.closest('.stat')) {
                    const link = this.querySelector('.view-details-btn');
                    if (link) {
                        window.location.href = link.href;
                    }
                }
            });
        });
        
        // Search functionality
        const searchInput = document.querySelector('input[type="text"]');
        const searchBtn = document.querySelector('.btn-primary');
        
        searchBtn.addEventListener('click', function() {
            const query = searchInput.value.trim();
            if (query) {
                console.log('Searching for:', query);
                // In real implementation: window.location.href = `/search?q=${encodeURIComponent(query)}`;
            }
        });
        
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchBtn.click();
            }
        });
        
        // Upload section interaction
        const uploadSection = document.querySelector('.upload-section');
        uploadSection.addEventListener('click', function() {
            window.location.href = '/new';
        });
        
        // Simulate loading animation for new photos
        function simulateLoading() {
            const galleryGrid = document.getElementById('galleryGrid');
            if (galleryGrid.children.length === 0) {
                const loadingDiv = document.createElement('div');
                loadingDiv.className = 'empty-state';
                loadingDiv.innerHTML = `
                    <div class="loading-skeleton" style="width: 60px; height: 60px; border-radius: 50%; margin: 0 auto 1.5rem;"></div>
                    <div class="loading-skeleton" style="width: 200px; height: 24px; margin: 0 auto 1rem;"></div>
                    <div class="loading-skeleton" style="width: 300px; height: 16px; margin: 0 auto 2rem;"></div>
                `;
                galleryGrid.appendChild(loadingDiv);
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            simulateLoading();
            setTimeout(() => {
                const loadingElement = document.querySelector('.loading-skeleton');
                if (loadingElement) {
                    loadingElement.parentElement.remove();
                }
            }, 1000);
        });
    </script>
