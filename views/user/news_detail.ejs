                    </div>

                    <!-- Action Bar -->
                    <div class="action-bar">
                        <a href="/Latest" class="back-btn">
                            <i class="bi bi-arrow-left"></i>
                            Back to News
                        </a>
                        
                        <div class="social-share">
                            <span class="text-muted me-2">Share:</span>
                            <a href="#" class="social-icon social-facebook">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="#" class="social-icon social-twitter">
                                <i class="bi bi-twitter"></i>
                            </a>
                            <a href="#" class="social-icon social-whatsapp">
                                <i class="bi bi-whatsapp"></i>
                            </a>
                            <a href="#" class="social-icon social-linkedin">
                                <i class="bi bi-linkedin"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Article Content -->
                    <div class="article-content">
                        <%= article.content %>
                    </div>

                    <!-- Author Section -->
                    <div class="author-section">
                        <div class="author-header">
                            <div class="author-avatar">
                                <%= article.author ? article.author.charAt(0).toUpperCase() : 'N' %>
                            </div>
                            <div class="author-info">
                                <h4><%= article.author || 'NewsHub Editorial Team' %></h4>
                                <p>Senior News Correspondent</p>
                            </div>
                        </div>
                        <div class="author-bio">
                            <p>
                                With over 10 years of experience in journalism, <%= article.author || 'our team' %> 
                                specializes in delivering accurate and timely news coverage. 
                                Committed to journalistic integrity and comprehensive reporting.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="sidebar">
                        <!-- Popular Articles -->
                        <div class="sidebar-card">
                            <h4 class="sidebar-title">Popular Articles</h4>
                            <ul class="popular-articles">
                                <li class="popular-item">
                                    <a href="#" class="popular-link">Global Economic Forecast 2025: What to Expect</a>
                                    <div class="popular-meta">
                                        <span><i class="bi bi-clock"></i> 2h ago</span>
                                        <span><i class="bi bi-eye"></i> 2.5k</span>
                                    </div>
                                </li>
                                <li class="popular-item">
                                    <a href="#" class="popular-link">Technology Innovations Changing Healthcare</a>
                                    <div class="popular-meta">
                                        <span><i class="bi bi-clock"></i> 5h ago</span>
                                        <span><i class="bi bi-eye"></i> 3.1k</span>
                                    </div>
                                </li>
                                <li class="popular-item">
                                    <a href="#" class="popular-link">Environmental Policies: Latest Developments</a>
                                    <div class="popular-meta">
                                        <span><i class="bi bi-clock"></i> 1d ago</span>
                                        <span><i class="bi bi-eye"></i> 4.2k</span>
                                    </div>
                                </li>
                                <li class="popular-item">
                                    <a href="#" class="popular-link">Sports Industry Trends for Next Season</a>
                                    <div class="popular-meta">
                                        <span><i class="bi bi-clock"></i> 1d ago</span>
                                        <span><i class="bi bi-eye"></i> 1.8k</span>
                                    </div>
                                </li>
                                <li class="popular-item">
                                    <a href="#" class="popular-link">Education Reforms: What Parents Need to Know</a>
                                    <div class="popular-meta">
                                        <span><i class="bi bi-clock"></i> 2d ago</span>
                                        <span><i class="bi bi-eye"></i> 2.7k</span>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <!-- Categories -->
