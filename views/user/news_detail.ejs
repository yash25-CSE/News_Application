    <!-- Breadcrumb -->
    <div class="container">
        <nav aria-label="breadcrumb" class="breadcrumb-custom">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/Latest">Latest News</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= article.title %></li>
            </ol>
        </nav>
    </div>

    <!-- Article Header -->
    <div class="article-header">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <span class="category-badge"><%= article.category || 'General' %></span>
                    <h1 class="article-title"><%= article.title %></h1>
                    
                    <div class="article-meta">
                        <div class="meta-item">
                            <i class="bi bi-person-circle"></i>
                            <span>By <%= article.author || 'NewsHub Staff' %></span>
                        </div>
                        <div class="meta-item">
                            <i class="bi bi-calendar3"></i>
                            <span>
                                <%= article.createdAt ? new Date(article.createdAt).toLocaleDateString('en-US', { 
                                    weekday: 'long', 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) : new Date().toLocaleDateString() %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="bi bi-clock"></i>
                            <span>
                                <%= Math.ceil(article.content ? article.content.length / 500 : 5) %> min read
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="bi bi-eye"></i>
                            <span>1.5k views</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="row">
                <!-- Main Article Content -->
                <div class="col-lg-8">
                    <!-- Article Image -->
                    <div class="article-image">
