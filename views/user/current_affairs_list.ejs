<!DOCTYPE html>
<html>
<head>
    <title>Current Affairs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container mt-4">
    <h2 class="mb-4 fw-bold">Current Affairs</h2>

    <div class="row">
        <% affairs.forEach(a => { %>
        <div class="col-md-4">
            <div class="card mb-4 shadow">

                <% if (a.imageUrl) { %>
                    <img src="<%= a.imageUrl %>" class="card-img-top">
                <% } %>

                <div class="card-body">
                    <h5><%= a.headline %></h5>
                    <p class="text-muted"><%= a.article.substring(0, 80) %>...</p>

                    <a href="/current-affairs/<%= a._id %>" class="btn btn-primary btn-sm">
                        Read More
                    </a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

</body>
</html>
