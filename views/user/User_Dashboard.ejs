<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Dashboard | News App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-newspaper me-2"></i>News Dashboard
        </h1>
        <p class="text-muted">
            Stay updated with the latest news and trends
        </p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4">

        <!-- Latest News -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-card-text display-5 text-primary"></i>
                    <h5 class="mt-3">Latest News</h5>
                    <p class="text-muted small">Read the most recent news articles</p>
                    <a href="/Latest" class="btn btn-primary btn-sm">
                        View News
                    </a>
                </div>
            </div>
        </div>

        <!-- Current Affairs -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-clock-history display-5 text-success"></i>
                    <h5 class="mt-3">Current Affairs</h5>
                    <p class="text-muted small">Daily important updates</p>
                    <a href="/current-affairs" class="btn btn-success btn-sm">
                        Explore
                    </a>
                </div>
            </div>
        </div>

        <!-- News Videos -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-camera-video display-5 text-danger"></i>
                    <h5 class="mt-3">News Videos</h5>
                    <p class="text-muted small">Watch trending news videos</p>
                    <a href="/videos" class="btn btn-danger btn-sm">
                        Watch
                    </a>
                </div>
            </div>
        </div>

        <!-- Headlines -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-megaphone display-5 text-warning"></i>
                    <h5 class="mt-3">Headlines</h5>
                    <p class="text-muted small">Top breaking headlines</p>
                    <a href="/headlines" class="btn btn-warning btn-sm text-dark">
                        Read
                    </a>
                </div>
            </div>
        </div>

        <!-- Articles -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-megaphone display-5 text-warning"></i>
                    <h5 class="mt-3">Articles</h5>
                    <p class="text-muted small">Watch Articles</p>
                    <a href="/photose" class="btn btn-warning btn-sm text-dark">
                        Read
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>

</body>
</html>
