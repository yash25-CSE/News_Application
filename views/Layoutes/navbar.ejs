    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nav = document.querySelector('.creative-nav');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileSearchBtn = document.getElementById('mobileSearchBtn');
            const mobileSearchBar = document.getElementById('mobileSearchBar');
            const closeMobileSearch = document.getElementById('closeMobileSearch');
            const notificationBtn = document.getElementById('notificationBtn');
            const mobileNotificationBtn = document.getElementById('mobileNotificationBtn');
            const notificationDropdown = document.getElementById('notificationDropdown');
            const mobileCategoriesBtn = document.getElementById('mobileCategoriesBtn');
            const mobileCategoriesMenu = document.getElementById('mobileCategoriesMenu');
            const darkModeToggle = document.getElementById('darkModeToggle');
            const mobileDarkModeToggle = document.getElementById('mobileDarkModeToggle');
            
            // Scroll effect for navbar
            function handleScroll() {
                if (window.scrollY > 20) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            }
            
            // Toggle mobile menu
            function toggleMobileMenu() {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('open');
                
                // Close search bar if open
                if (!mobileSearchBar.classList.contains('hidden')) {
                    mobileSearchBar.classList.add('hidden');
                }
                
                // Close categories if open
                if (mobileCategoriesMenu.classList.contains('open')) {
                    mobileCategoriesMenu.classList.remove('open');
                    mobileCategoriesBtn.querySelector('i.fa-chevron-down').style.transform = 'rotate(0deg)';
                }
            }
            
            // Toggle mobile search bar
            function toggleMobileSearch() {
                mobileSearchBar.classList.toggle('hidden');
                
                // Close menu if open
                if (mobileMenu.classList.contains('open')) {
                    toggleMobileMenu();
                }
                
                // Focus on search input
                if (!mobileSearchBar.classList.contains('hidden')) {
                    setTimeout(() => {
                        mobileSearchBar.querySelector('input').focus();
                    }, 100);
                }
            }
            
            // Toggle notifications dropdown
            function toggleNotifications() {
                notificationDropdown.classList.toggle('hidden');
                
                // Hide other dropdowns
                const dropdowns = document.querySelectorAll('.dropdown-menu');
                dropdowns.forEach(dropdown => {
                    dropdown.style.opacity = '0';
                    dropdown.style.visibility = 'hidden';
                });
            }
            
            // Toggle mobile categories menu
            function toggleMobileCategories() {
                mobileCategoriesMenu.classList.toggle('open');
                const icon = mobileCategoriesBtn.querySelector('i.fa-chevron-down');
                if (mobileCategoriesMenu.classList.contains('open')) {
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    icon.style.transform = 'rotate(0deg)';
                }
            }
            

            
            // Close dropdowns when clicking outside
            document.addEventListener('click', function(event) {
                // Close notifications dropdown
                if (!notificationBtn.contains(event.target) && 
                    !mobileNotificationBtn.contains(event.target) && 
                    !notificationDropdown.contains(event.target)) {
                    notificationDropdown.classList.add('hidden');
                }
                
                // Close desktop dropdowns
                const dropdowns = document.querySelectorAll('.dropdown');
                dropdowns.forEach(dropdown => {
                    if (!dropdown.contains(event.target)) {
                        const menu = dropdown.querySelector('.dropdown-menu');
                        if (menu) {
                            menu.style.opacity = '0';
                            menu.style.visibility = 'hidden';
                        }
                    }
                });
            });
            

            // Event Listeners
            window.addEventListener('scroll', handleScroll);
            mobileMenuBtn.addEventListener('click', toggleMobileMenu);
            mobileSearchBtn.addEventListener('click', toggleMobileSearch);
            closeMobileSearch.addEventListener('click', () => {
                mobileSearchBar.classList.add('hidden');
            });
            
            if (notificationBtn) {
                notificationBtn.addEventListener('click', toggleNotifications);
            }
            
            if (mobileNotificationBtn) {
                mobileNotificationBtn.addEventListener('click', toggleNotifications);
            }
            
            mobileCategoriesBtn.addEventListener('click', toggleMobileCategories);
            
            if (darkModeToggle) {
                darkModeToggle.addEventListener('change', toggleDarkMode);
            }
            
            if (mobileDarkModeToggle) {
                mobileDarkModeToggle.addEventListener('change', toggleDarkMode);
            }
            
            // Handle search bar focus on desktop
            const desktopSearchInput = document.querySelector('.search-bar input');
            if (desktopSearchInput) {
                desktopSearchInput.addEventListener('focus', function() {
                    this.parentElement.classList.add('expanded');
                });
                
                desktopSearchInput.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.parentElement.classList.remove('expanded');
                    }
                });
            }
            
            // Initialize scroll state
            handleScroll();
            
            // Close mobile menu when clicking a link
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (mobileMenu.classList.contains('open')) {
                        toggleMobileMenu();
                    }
                });
            });
        });
    </script>
</body>
