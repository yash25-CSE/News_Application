                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>

                <!-- Mobile Menu -->
                <div id="mobileMenu" class="mobile-menu mt-2">
                    <div class="py-4 space-y-1 border-t border-gray-100">
                        <a href="/" class="block px-4 py-3 text-base font-medium text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg flex items-center">
                            <i class="fas fa-home mr-3 text-blue-500 w-5"></i> Home
                        </a>
                        
                        <!-- Mobile Categories Dropdown -->
                        <div class="px-4">
                            <button id="mobileCategoriesBtn" class="w-full flex items-center justify-between py-3 text-base font-medium text-gray-700 hover:text-blue-600">
                                <div class="flex items-center">
                                    <i class="fas fa-th-large mr-3 text-purple-500 w-5"></i> Categories
